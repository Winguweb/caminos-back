    span
      time = l(@meeting.date, format: :year_and_month).titleize
    span
      time = l(@meeting.date, format: :day_and_day_of_week).titleize
    span = @meeting.lookup_address
  section
    p = @meeting.objectives
  section
    p
      strong = "Actor convocante: "
      span = "Municipio"
    p
      strong = "Participantes: "
      span = "Junta vecinal, ACIJ"
